<ul class="media-list">
  <% tasks.each do |task| %>
    <% user = task.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(current_user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        
        <div>
          
         <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-primary' %>
          <% end %>
        </div>
        
        <div>
          <%= link_to '新規タスクの追加', new_task_path, class: "btn btn-primary" %>
          </div>
        
      </div>
    </li>
  <% end %>


  
  <%#= render 'new', tasks: @tasks %>

  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク名</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>

<% @tasks.each do |task| %>

        <tr>
          <td>
<%= link_to task.id, task %>

</td>
          <td>
<%= task.content %>

</td>
          <td>
<%= task.status %>
</td>
        </tr>

<% end %>

</tbody>
  </table>
  
<%= paginate @tasks %>

</ul>



